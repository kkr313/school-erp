# Environment Configuration for School ERP API System
# Copy this file to .env.local for local development

# API Configuration
REACT_APP_DEFAULT_BASE_URL=https://teo-vivekanadbihar.co.in
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=1000

# Authentication
REACT_APP_DEFAULT_USER_TOKEN=e6b2d3f0-2e3c-4f3a-9c1d-bb1b5e5ab7fa

# Debug Mode
REACT_APP_API_DEBUG=false

# Tracking Configuration
REACT_APP_TRACKING_ID=WEB_APP

# School Configuration API (for dynamic school URL fetching)
REACT_APP_SCHOOL_CONFIG_API=https://teo-vivekanadbihar.co.in/api/Config/GetSchoolUrls

# Feature Flags
REACT_APP_ENABLE_DYNAMIC_SCHOOL_URLS=true
REACT_APP_ENABLE_API_CACHING=false
